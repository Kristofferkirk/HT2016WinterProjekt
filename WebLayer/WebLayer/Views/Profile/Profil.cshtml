@model WebLayer.Models.Users

@{
    ViewBag.Title = "Profil";
    
}

<h2>Profil</h2>
<div class="row">
    <div class="col-md-1">
        <h2>@Model.Name</h2>
        @if (/* !isOwnProfile && !isFriends*/ 1 == 1)
        {

            <input type="submit" value="Add Friend" class="btn btn-primary" onclick="location.href='@Url.Action("FriendRequest", "Profile")'" />
            <button type="submit">
                @Html.ActionLink("Add Friend", "SendFriendRequest", new { userID = Model.UId }, new { id = "myLink" })

            </button>







        }
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <img src="@Url.Content("~/images/profile/" + Path.GetFileName(Model.ImagePath))" width="250" height="250" />
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">
                Name: @Model.Name
            </div>
            <div class="col-md-4">
                Age: @Model.Age
            </div>
            <div class="col-md-4">
                Sexual Pref: @Model.SexOrient
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                4
            </div>
            <div class="col-md-4">
                5
            </div>
            <div class="col-md-4">
                6
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                7
            </div>
            <div class="col-md-4">
                8
            </div>
            <div class="col-md-4">
                9
            </div>
        </div>
    </div>

</div>
