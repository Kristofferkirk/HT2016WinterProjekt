@model WebLayer.Models.Users

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@Html.ValidationSummary(true)

@using (Html.BeginForm())
{
    @Html.LabelFor(u => u.Email)<br />
    @Html.TextBoxFor(u => u.Email)<br />
    
    @Html.LabelFor(u => u.Name)<br />
    @Html.TextBoxFor(u => u.Name)<br />
    @Html.LabelFor(u => u.City)<br />
    @Html.TextBoxFor(u => u.City)<br />
    @Html.LabelFor(u => u.Country)<br />
    @Html.TextBoxFor(u => u.Country)<br />
    @Html.LabelFor(u => u.Age)<br />
    @Html.TextBoxFor(u => u.Age)<br />

    <p>
        <button type="submit">Uppdatera</button>
    </p>
}
